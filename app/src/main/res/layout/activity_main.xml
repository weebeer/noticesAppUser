<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/fundo"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/kotlinandfirebase"
        android:scaleType="centerCrop"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/txtNoticeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notice Title"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/txtNoticeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notice Text"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@color/purple_500"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtNoticeAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Francisco Weber"
            android:layout_margin="20dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/txtNoticeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00/00/2022"
            android:layout_margin="20dp"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>

</ScrollView>